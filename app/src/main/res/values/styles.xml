<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.AppTheme.Buttons" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/common_spacing</item>
    </style>

    <style name="Widget.AppTheme.LikeButton" parent="Widget.AppTheme.Buttons">
        <item name="iconTint">@color/color_like</item>
        <item name="android:checkable">true</item>
    </style>

    <style name="Widget.AppTheme.NonCheckableButtons" parent="Widget.AppTheme.Buttons">
        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
    </style>

</resources>